{
  "Name": "build-images",
  "Sources": {
    "startup_deb.sh": "./mkimage_deb.sh",
    "startup_el.sh": "./mkimage_el.sh",
    "common.sh": "./common.sh"
  },
  "Vars": {
    "gcs_path": {
      "Required": true,
      "Description": "GCS path to packages"
    }
  },
  "Steps": {
    "create-disks": {
      "CreateDisks": [
        {
          "Name": "inst-imgbuild-rhel-6",
          "SourceImage": "projects/rhel-cloud/global/images/family/rhel-6"
        },
        {
          "Name": "inst-imgbuild-rhel-7",
          "SourceImage": "projects/rhel-cloud/global/images/family/rhel-7"
        },
        {
          "Name": "inst-imgbuild-rhel-8",
          "SourceImage": "projects/rhel-cloud/global/images/family/rhel-8"
        },
        {
          "Name": "inst-imgbuild-centos-8",
          "SourceImage": "projects/centos-cloud/global/images/family/centos-8"
        },
        {
          "Name": "inst-imgbuild-centos-7",
          "SourceImage": "projects/centos-cloud/global/images/family/centos-7"
        },
        {
          "Name": "inst-imgbuild-centos-6",
          "SourceImage": "projects/centos-cloud/global/images/family/centos-6"
        },
        {
          "Name": "inst-imgbuild-debian-9",
          "SourceImage": "projects/debian-cloud/global/images/family/debian-9"
        },
        {
          "Name": "inst-imgbuild-debian-10",
          "SourceImage": "projects/debian-cloud/global/images/family/debian-10"
        },
        {
          "Name": "rhel-6-nge",
          "SourceImage": "projects/rhel-cloud/global/images/family/rhel-6"
        },
        {
          "Name": "rhel-7-nge",
          "SourceImage": "projects/rhel-cloud/global/images/family/rhel-7"
        },
        {
          "Name": "rhel-8-nge",
          "SourceImage": "projects/rhel-cloud/global/images/family/rhel-8"
        },
        {
          "Name": "centos-8-nge",
          "SourceImage": "projects/centos-cloud/global/images/family/centos-8"
        },
        {
          "Name": "centos-7-nge",
          "SourceImage": "projects/centos-cloud/global/images/family/centos-7"
        },
        {
          "Name": "centos-6-nge",
          "SourceImage": "projects/centos-cloud/global/images/family/centos-6"
        },
        {
          "Name": "debian-9-nge",
          "SourceImage": "projects/debian-cloud/global/images/family/debian-9"
        },
        {
          "Name": "debian-10-nge",
          "SourceImage": "projects/debian-cloud/global/images/family/debian-10"
        }
      ]
    },
    "install-packages": {
      "CreateInstances": [
        {
          "Disks": [
            {"Source": "inst-imgbuild-debian-9"}, {"Source": "debian-9-nge"}
          ],
          "Metadata": {
            "gcs-dir": "${gcs_path}"
          },
          "MachineType": "n1-standard-2",
          "Name": "inst-imgbuild-debian-9",
          "StartupScript": "startup_deb.sh",
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_only"]
        },
        {
          "Disks": [
            {"Source": "inst-imgbuild-debian-10"}, {"Source": "debian-10-nge"}
          ],
          "Metadata": {
            "gcs-dir": "${gcs_path}"
          },
          "MachineType": "n1-standard-2",
          "Name": "inst-imgbuild-debian-10",
          "StartupScript": "startup_deb.sh",
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_only"]
        },
        {
          "Disks": [
            {"Source": "inst-imgbuild-rhel-6"}, {"Source": "rhel-6-nge"}
          ],
          "Metadata": {
            "gcs-dir": "${gcs_path}"
          },
          "MachineType": "n1-standard-2",
          "Name": "inst-imgbuild-rhel-6",
          "StartupScript": "startup_el.sh",
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_only"]
        },
        {
          "Disks": [
            {"Source": "inst-imgbuild-rhel-7"}, {"Source": "rhel-7-nge"}
          ],
          "Metadata": {
            "gcs-dir": "${gcs_path}"
          },
          "MachineType": "n1-standard-2",
          "Name": "inst-imgbuild-rhel-7",
          "StartupScript": "startup_el.sh",
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_only"]
        },
        {
          "Disks": [
            {"Source": "inst-imgbuild-rhel-8"}, {"Source": "rhel-8-nge"}
          ],
          "Metadata": {
            "gcs-dir": "${gcs_path}"
          },
          "MachineType": "n1-standard-2",
          "Name": "inst-imgbuild-rhel-8",
          "StartupScript": "startup_el.sh",
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_only"]
        },
        {
          "Disks": [
            {"Source": "inst-imgbuild-centos-6"}, {"Source": "centos-6-nge"}
          ],
          "Metadata": {
            "gcs-dir": "${gcs_path}"
          },
          "MachineType": "n1-standard-2",
          "Name": "inst-imgbuild-centos-6",
          "StartupScript": "startup_el.sh",
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_only"]
        },
        {
          "Disks": [
            {"Source": "inst-imgbuild-centos-7"}, {"Source": "centos-7-nge"}
          ],
          "Metadata": {
            "gcs-dir": "${gcs_path}"
          },
          "MachineType": "n1-standard-2",
          "Name": "inst-imgbuild-centos-7",
          "StartupScript": "startup_el.sh",
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_only"]
        },
        {
          "Disks": [
            {"Source": "inst-imgbuild-centos-8"}, {"Source": "centos-8-nge"}
          ],
          "Metadata": {
            "gcs-dir": "${gcs_path}"
          },
          "MachineType": "n1-standard-2",
          "Name": "inst-imgbuild-centos-8",
          "StartupScript": "startup_el.sh",
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_only"]
        }
      ]
    },
    "wait-for-build": {
      "Timeout": "10m",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-imgbuild-debian-9",
          "Stopped": true,
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Image build failed",
            "StatusMatch": "Image build status"
          }
        },
        {
          "Name": "inst-imgbuild-debian-10",
          "Stopped": true,
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Image build failed",
            "StatusMatch": "Image build status"
          }
        },
        {
          "Name": "inst-imgbuild-rhel-6",
          "Stopped": true,
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Image build failed",
            "StatusMatch": "Image build status"
          }
        },
        {
          "Name": "inst-imgbuild-rhel-7",
          "Stopped": true,
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Image build failed",
            "StatusMatch": "Image build status"
          }
        },
        {
          "Name": "inst-imgbuild-rhel-8",
          "Stopped": true,
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Image build failed",
            "StatusMatch": "Image build status"
          }
        },
        {
          "Name": "inst-imgbuild-centos-6",
          "Stopped": true,
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Image build failed",
            "StatusMatch": "Image build status"
          }
        },
        {
          "Name": "inst-imgbuild-centos-7",
          "Stopped": true,
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Image build failed",
            "StatusMatch": "Image build status"
          }
        },
        {
          "Name": "inst-imgbuild-centos-8",
          "Stopped": true,
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Image build failed",
            "StatusMatch": "Image build status"
          }
        }
      ]
    },
    "create-images": {
      "CreateImages": [
        {
          "Name": "debian-9-nge",
          "Family": "debian-9-nge",
          "SourceDisk": "debian-9-nge",
          "NoCleanup": true
        },
        {
          "Name": "debian-10-nge",
          "Family": "debian-10-nge",
          "SourceDisk": "debian-10-nge",
          "NoCleanup": true
        },
        {
          "Name": "rhel-6-nge",
          "Family": "rhel-6-nge",
          "SourceDisk": "rhel-6-nge",
          "NoCleanup": true
        },
        {
          "Name": "rhel-7-nge",
          "Family": "rhel-7-nge",
          "SourceDisk": "rhel-7-nge",
          "NoCleanup": true
        },
        {
          "Name": "rhel-8-nge",
          "Family": "rhel-8-nge",
          "SourceDisk": "rhel-8-nge",
          "NoCleanup": true
        },
        {
          "Name": "centos-6-nge",
          "Family": "centos-6-nge",
          "SourceDisk": "centos-6-nge",
          "NoCleanup": true
        },
        {
          "Name": "centos-7-nge",
          "Family": "centos-7-nge",
          "SourceDisk": "centos-7-nge",
          "NoCleanup": true
        },
        {
          "Name": "centos-8-nge",
          "Family": "centos-8-nge",
          "SourceDisk": "centos-8-nge",
          "NoCleanup": true
        }
      ]
    }
  },
  "Dependencies": {
    "wait-for-build": [
      "install-packages"
    ],
    "install-packages": [
      "create-disks"
    ],
    "create-images": [
      "wait-for-build"
    ]
  }
}
